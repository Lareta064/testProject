mixin addProduct(img)
	//=========== КАРТОЧКА ДОП ПРОДУКТА ==========
	label.addProduct-item
		.addProduct-item-img
			img(src="img/products/addProduct"+img+".png", width="158" alt="product")
		.addProduct-item-title
			p Лук
		
		.addProduct-item-price
			p 80
			span руб.

		input(type="checkbox" name="" value="")
		.fake-checkbox
			+checkMark
	//=========== КОНЕЦ КАРТОЧКА ДОП ПРОДУКТА ==========	
	
//----MODAL WINDOW----//
#productModal.productModal.modal.fade(tabindex="-1" role="dialog"  aria-hidden="true" data-aos="flip-left")
	.modal-dialog.modal-dialog-centered(role="document")
		.modal-content
			button.close(type="button" data-dismiss="modal" aria-label="Close")
				img(src="img/products/close.png", width='30' alt="x")
			//==============Центр модального окна ===============
			.modal-body
				//==============Левая колонка ===============
				.modal-body-left
					.modal-body-img 
						img(src="img/products/1.png", width="340" alt="product")
				
				//==============Правая колонка ===============
				.modal-body-right
					//==============Заголовок модального окна ===============
					.productModal-title
						h1 Пицца “Особая”
					.modal-body-row.modal-row-desck
						p Говядина, халапеньо, моцарелла, помидоры, куриное филе, томатный соус.
						span Вес: 550 гр.
					.modal-body-row.product-set__row
						.product-card__filters
							span.filter-name.mrb-5 Размеры:
							.filters-type
								.filters-type__item
									label
										input(type= "radio" name="product_diameter" value="26см")
										.fake-radiobutton 26см
								.filters-type__item
									label
										input(type= "radio" name="product_diameter" value="33см")
										.fake-radiobutton 33см
								.filters-type__item
									label
										input(type= "radio" name="product_diameter" value="40см")
										.fake-radiobutton 40см
								.filters-type__item
									label
										input(type= "radio" name="product_diameter" value="33см")
										.fake-radiobutton 33см
								
								
						.product-card__filters
							span.filter-name.mrb-5 Тесто:
							.filters-type
								.filters-type__item
									label
										input(type="radio" name="product_testo" value="Традиционное")
										.fake-radiobutton Традиционное
								.filters-type__item
									label
										input(type="radio" name="product_testo" value="Тонкое")
										.fake-radiobutton Тонкое
								.filters-type__item
									label
										input(type="radio" name="product_testo" value="Тонкое")
										.fake-radiobutton Дрожжевое
					
					//============== ПРОДУКТЫ - ДОПОЛНЕНИЕ К ЗАКАЗУ ===============
					.modal-body-row.modal-row-addProduct
						.filter-name Добавить:
						.addProduct-inner
							+addProduct(1)
							+addProduct(2)
							+addProduct(3)
							+addProduct(1)
							+addProduct(1)
							+addProduct(2)
							+addProduct(3)
							+addProduct(1)
							
					.product-set__footer
						.total-amount
							span.filter-name Количество:
							+counter 
							.productCard-price
								.product-price-new
									p 630
									span &#8381;
								.product-price-old
									p 830
									span &#8381;
							button.page-button.page-button--red(data-dismiss="modal") В корзину

